<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_more_courses"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lockscreen.localshop.com.dashboard.MoreCourses"
    android:background="@drawable/background">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/upper_part"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/button2"
            android:background="@drawable/icon_statistics"
            android:layout_alignParentTop="true"
            android:layout_marginTop="19dp"
            android:layout_marginLeft="160dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <Button
            android:layout_alignParentTop="true"
            android:id="@+id/menu"
            android:background="@drawable/icon_menue"
            android:layout_marginTop="19dp"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <ImageView
            app:srcCompat="@drawable/logo"
            android:id="@+id/ease_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:layout_width="70dp"
            android:layout_height="70dp" />

        <ImageView
            app:srcCompat="@drawable/arcs"
            android:id="@+id/arcs"
            android:layout_width="180dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_height="85dp" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/upper_part">

        <Button
            android:id="@+id/rB0_postCS"
            android:layout_above="@+id/gL0_preCS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@android:drawable/arrow_up_float" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/strock">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="140dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <GridLayout
                        android:id="@+id/gL0_postCS"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:padding="10dp">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:id="@+id/sLL0_postCS"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_column="0"
                                android:layout_row="0">

                                <TextView
                                    android:id="@+id/tV0_postCS"
                                    android:text="SEO"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="10dp"
                                    android:paddingRight="40dp"
                                    android:paddingLeft="40dp"
                                    android:paddingBottom="10dp"
                                    android:minWidth="0dp"
                                    android:minHeight="0dp"
                                    android:background="@drawable/strock"
                                    android:layout_marginBottom="5dp"
                                    android:gravity="center"
                                    android:textColor="@android:color/background_light" />

                                <TextView
                                    android:id="@+id/tV1_postCS"
                                    android:text="SEA"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="10dp"
                                    android:paddingRight="40dp"
                                    android:paddingLeft="40dp"
                                    android:paddingBottom="10dp"
                                    android:minWidth="0dp"
                                    android:minHeight="0dp"
                                    android:background="@drawable/strock"
                                    android:layout_marginBottom="5dp"
                                    android:gravity="center"
                                    android:textColor="@android:color/background_light" />

                                <TextView
                                    android:id="@+id/tV2_postCS"
                                    android:text="E-BUSINESS"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingTop="10dp"
                                    android:paddingRight="40dp"
                                    android:paddingLeft="40dp"
                                    android:paddingBottom="10dp"
                                    android:minWidth="0dp"
                                    android:minHeight="0dp"
                                    android:background="@drawable/strock"
                                    android:layout_marginBottom="5dp"
                                    android:gravity="center"
                                    android:textColor="@android:color/background_light" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/sLL1_postCS"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginLeft="10dp">

                                <ToggleButton
                                    android:id="@+id/ltB0_postCS"
                                    android:text="ToggleButton"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:minWidth="0dp"
                                    android:minHeight="0dp"
                                    android:paddingBottom="10dp"
                                    android:paddingTop="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:background="@drawable/strock"
                                    android:textColor="@android:color/background_light"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp" />
                                <ToggleButton
                                    android:id="@+id/ltB1_postCS"
                                    android:text="ToggleButton"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:minWidth="0dp"
                                    android:minHeight="0dp"
                                    android:paddingBottom="10dp"
                                    android:paddingTop="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:background="@drawable/strock"
                                    android:textColor="@android:color/background_light"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp" />

                                <ToggleButton
                                    android:id="@+id/ltB2_postCS"
                                    android:text="ToggleButton"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:minWidth="0dp"
                                    android:minHeight="0dp"
                                    android:paddingBottom="10dp"
                                    android:paddingTop="10dp"
                                    android:layout_marginBottom="5dp"
                                    android:background="@drawable/strock"
                                    android:textColor="@android:color/background_light"
                                    android:paddingLeft="10dp"
                                    android:paddingRight="10dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </GridLayout>
                </LinearLayout>
            </ScrollView>
        </FrameLayout>

        <Button
            android:id="@+id/rB1_postCS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:drawable/arrow_down_float"
            android:layout_below="@+id/linearLayout"
            android:layout_alignLeft="@+id/finish_preCS"
            android:layout_alignStart="@+id/finish_preCS"
            android:layout_marginBottom="10dp" />

        <Button
            android:text="Finish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/finish_postCS"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/rB0_postCS"
            android:layout_alignStart="@+id/rB0_postCS"
            android:background="@drawable/strock"
            android:textColor="@android:color/background_light" />

    </LinearLayout>


</RelativeLayout>
